import java.util.ArrayList;
import java.util.Scanner;

public class SumUsingAutoboxing {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<Integer> numbers = new ArrayList<>();

        System.out.println("Enter integers as strings (type 'done' to finish):");
        while (true) {
            String input = scanner.nextLine();
            if (input.equalsIgnoreCase("done")) {
                break;
            }
            try {
                // Parse string to int and autobox to Integer
                Integer num = Integer.parseInt(input);
                numbers.add(num);
            } catch (NumberFormatException e) {
                System.out.println("Invalid input, please enter a valid integer or 'done'.");
            }
        }

        int sum = 0;
        // Enhanced for-loop with unboxing (Integer to int)
        for (Integer num : numbers) {
            sum += num;
        }

        System.out.println("Total sum: " + sum);
        scanner.close();
    }
}
